@model IEnumerable<P8_StoritvePrevozovREST.Classes.Vozilo>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>
                Seznam vozil
            </h4>
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                    <th><input type="checkbox" id="checkall" /></th>
                    <th>ID vozila</th>
                    <th>Znamka</th>
                    <th>Model</th>
                    <th>Tip vozila</th>
                    <th>Kapaciteta</th>
                    <th>Uredi</th>
                    <th>Izbriši</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" class="checkthis" /></td>
                                <td>@item.IDVozilo</td>
                                <td>@item.Znamka</td>
                                <td>@item.Model</td>
                                <td>@item.TipVozila</td>
                                <td>@item.Kapaciteta</td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                                        <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" onclick="location.href='@Url.Action("Uredi", "Vozila", new { id = item.IDVozilo })';return false;">

                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </button>
                                    </p>
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Delete">
                                        <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" onclick="location.href='@Url.Action("Izbrisi", "Vozila", new { id = item.IDVozilo })';return false;">
                                            <span class="glyphicon glyphicon-trash">
                                            </span>
                                        </button>
                                    </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

