@model P8_StoritvePrevozovREST.Classes.Vozilo
    @{
        ViewBag.Title = "Uredi";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Novo vozilo</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.IDVozilo)

            <div class="form-group">
                @Html.LabelFor(model => model.Kapaciteta, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Kapaciteta)
                    @Html.ValidationMessageFor(model => model.Kapaciteta)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Znamka, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Znamka)
                    @Html.ValidationMessageFor(model => model.Znamka)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Model, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Model)
                    @Html.ValidationMessageFor(model => model.Model)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TipVozila, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.TipVozila, new SelectList(new string[] { "Kombi", "Osebno vozilo", "Luksuzno" }, "Kombi"))
                    @Html.ValidationMessageFor(model => model.TipVozila)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Dodaj" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
